<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.AdminDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #37474f; -fx-padding: 15;">
         <children>
            <Label fx:id="welcomeLabel" style="-fx-text-fill: white;" text="Welcome, Admin!">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="languageToggle" onAction="#toggleLanguage" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="नेपाली" />
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
         </children>
      </HBox>
   </top>
   
   <center>
      <TabPane fx:id="mainTabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <!-- Guide Management Tab -->
            <Tab text="Guide Management">
               <content>
                  <VBox spacing="20.0" style="-fx-background-color: #455a64;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <!-- Guide Form -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <Label text="Guide Management" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                              
                              <HBox spacing="10.0">
                                 <children>
                                    <TextField fx:id="guideUsernameField" promptText="Username" />
                                    <TextField fx:id="guideNameField" promptText="Full Name" />
                                    <PasswordField fx:id="guidePasswordField" promptText="Password" />
                                    <TextField fx:id="guideEmailField" promptText="Email" />
                                 </children>
                              </HBox>
                              
                              <HBox spacing="10.0">
                                 <children>
                                    <TextField fx:id="guidePhoneField" promptText="Phone" />
                                    <TextField fx:id="guideLanguagesField" promptText="Languages" />
                                    <TextField fx:id="guideExperienceField" promptText="Experience" />
                                 </children>
                              </HBox>
                              
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button fx:id="addGuideButton" onAction="#handleAddGuide" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Add Guide" />
                                    <Button fx:id="updateGuideButton" onAction="#handleUpdateGuide" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="Update Guide" />
                                    <Button fx:id="deleteGuideButton" onAction="#handleDeleteGuide" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Guide" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Guides Table -->
                        <TableView fx:id="guidesTable" style="-fx-background-color: white; -fx-background-radius: 10;">
                           <columns>
                              <TableColumn fx:id="guideUsernameColumn" prefWidth="120.0" text="Username" />
                              <TableColumn fx:id="guideNameColumn" prefWidth="150.0" text="Full Name" />
                              <TableColumn fx:id="guideLanguagesColumn" prefWidth="150.0" text="Languages" />
                              <TableColumn fx:id="guideExperienceColumn" prefWidth="120.0" text="Experience" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Attractions Management Tab -->
            <Tab text="Attractions Management">
               <content>
                  <VBox spacing="20.0" style="-fx-background-color: #455a64;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <!-- Attraction Form -->
                        <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10;">
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                           <children>
                              <Label text="Attraction Management" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                              
                              <HBox spacing="15.0">
                                 <children>
                                    <TextField fx:id="attractionNameField" promptText="Attraction Name" />
                                    <ComboBox fx:id="attractionAltitudeCombo" promptText="Altitude" />
                                    <ComboBox fx:id="attractionDifficultyCombo" promptText="Difficulty" />
                                    <TextField fx:id="attractionPriceField" promptText="Base Price" />
                                 </children>
                              </HBox>
                              
                              <HBox alignment="CENTER" spacing="10.0">
                                 <children>
                                    <Button fx:id="addAttractionButton" onAction="#handleAddAttraction" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Add Attraction" />
                                    <Button fx:id="updateAttractionButton" onAction="#handleUpdateAttraction" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="Update Attraction" />
                                    <Button fx:id="deleteAttractionButton" onAction="#handleDeleteAttraction" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete Attraction" />
                                 </children>
                              </HBox>
                           </children>
                        </VBox>
                        
                        <!-- Attractions Table -->
                        <TableView fx:id="attractionsTable" style="-fx-background-color: white; -fx-background-radius: 10;">
                           <columns>
                              <TableColumn fx:id="attractionNameColumn" prefWidth="200.0" text="Name" />
                              <TableColumn fx:id="attractionAltitudeColumn" prefWidth="100.0" text="Altitude" />
                              <TableColumn fx:id="attractionDifficultyColumn" prefWidth="100.0" text="Difficulty" />
                              <TableColumn fx:id="attractionPriceColumn" prefWidth="120.0" text="Base Price" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Bookings Management Tab -->
            <Tab text="Bookings Management">
               <content>
                  <VBox spacing="20.0" style="-fx-background-color: #455a64;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <HBox alignment="CENTER">
                           <children>
                              <Button fx:id="cancelBookingButton" onAction="#handleCancelBooking" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Cancel Selected Booking" />
                           </children>
                        </HBox>
                        
                        <TableView fx:id="bookingsTable" style="-fx-background-color: white; -fx-background-radius: 10;">
                           <columns>
                              <TableColumn fx:id="bookingIdColumn" prefWidth="120.0" text="Booking ID" />
                              <TableColumn fx:id="bookingTouristColumn" prefWidth="150.0" text="Tourist" />
                              <TableColumn fx:id="bookingAttractionColumn" prefWidth="200.0" text="Attraction" />
                              <TableColumn fx:id="bookingDateColumn" prefWidth="120.0" text="Date" />
                              <TableColumn fx:id="bookingStatusColumn" prefWidth="100.0" text="Status" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </content>
            </Tab>
            
            <!-- Analytics Tab -->
            <Tab text="Analytics">
               <content>
                  <VBox spacing="20.0" style="-fx-background-color: #455a64;">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label fx:id="totalRevenueLabel" style="-fx-text-fill: white; -fx-font-size: 18; -fx-font-weight: bold;" text="Total Revenue: $0.00" />
                        
                        <HBox spacing="20.0">
                           <children>
                              <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                                 <children>
                                    <Label text="Tourist Nationality Distribution" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                                    <PieChart fx:id="nationalityChart" prefHeight="300.0" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10;" HBox.hgrow="ALWAYS">
                                 <padding>
                                    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                                 </padding>
                                 <children>
                                    <Label text="Popular Attractions" style="-fx-font-size: 16; -fx-font-weight: bold;" />
                                    <BarChart fx:id="popularAttractionsChart" prefHeight="300.0">
                                       <xAxis>
                                          <CategoryAxis />
                                       </xAxis>
                                       <yAxis>
                                          <NumberAxis />
                                       </yAxis>
                                    </BarChart>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
