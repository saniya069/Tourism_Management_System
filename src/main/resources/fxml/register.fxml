<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #e8f5e8, #c8e6c9);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.RegisterController">
   <children>
      <Label fx:id="titleLabel" text="Register New User" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <VBox alignment="CENTER" maxWidth="500.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <GridPane hgap="10.0" vgap="10.0">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                  <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="usernameField" promptText="Enter username" GridPane.columnIndex="1" />
                  
                  <Label text="Password:" GridPane.rowIndex="1" />
                  <PasswordField fx:id="passwordField" promptText="Enter password" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  
                  <Label text="Full Name:" GridPane.rowIndex="2" />
                  <TextField fx:id="fullNameField" promptText="Enter full name" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  
                  <Label text="Email:" GridPane.rowIndex="3" />
                  <TextField fx:id="emailField" promptText="Enter email" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  
                  <Label text="Phone:" GridPane.rowIndex="4" />
                  <TextField fx:id="phoneField" promptText="Enter phone number" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  
                  <Label text="Role:" GridPane.rowIndex="5" />
                  <ComboBox fx:id="roleComboBox" prefWidth="200.0" promptText="Select role" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                  
                  <Label fx:id="languagesLabel" text="Languages:" GridPane.rowIndex="6" />
                  <TextField fx:id="languagesField" promptText="e.g., English, Nepali" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                  
                  <Label fx:id="experienceLabel" text="Experience:" GridPane.rowIndex="7" />
                  <TextField fx:id="experienceField" promptText="e.g., 5 years" GridPane.columnIndex="1" GridPane.rowIndex="7" />
               </children>
            </GridPane>
            
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" />
            
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="100.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Register" />
                  <Button fx:id="backButton" onAction="#goBack" prefWidth="100.0" style="-fx-background-color: #757575; -fx-text-fill: white;" text="Back" />
               </children>
            </HBox>
            
            <Button fx:id="languageToggle" onAction="#toggleLanguage" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="नेपाली" />
         </children>
      </VBox>
   </children>
</VBox>
