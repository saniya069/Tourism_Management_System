<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="600.0" prefWidth="800.0" spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.LoginController">
   <children>
      <Label fx:id="titleLabel" text="Nepal Tourism Management System" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      
      <VBox alignment="CENTER" maxWidth="400.0" spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         <children>
            <Label fx:id="usernameLabel" text="Username:" />
            <TextField fx:id="usernameField" promptText="Enter username" />
            
            <Label fx:id="passwordLabel" text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Enter password" />
            
            <Label fx:id="errorLabel" style="-fx-text-fill: red;" visible="false" />
            
            <HBox alignment="CENTER" spacing="10.0">
               <children>
                  <Button fx:id="loginButton" onAction="#handleLogin" prefWidth="100.0" style="-fx-background-color: #2196f3; -fx-text-fill: white;" text="Login" />
                  <Button fx:id="registerButton" onAction="#handleRegister" prefWidth="100.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Register" />
               </children>
            </HBox>
            
            <Button fx:id="languageToggle" onAction="#toggleLanguage" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="नेपाली" />
         </children>
      </VBox>
   </children>
</VBox>
