<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="800.0" prefWidth="1200.0" style="-fx-background-color: linear-gradient(to bottom, #e1f5fe, #b3e5fc);" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.TouristDashboardController">
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #0277bd; -fx-padding: 15;">
         <children>
            <Label fx:id="welcomeLabel" style="-fx-text-fill: white;" text="Welcome, Tourist!">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="languageToggle" onAction="#toggleLanguage" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="नेपाली" />
            <Button fx:id="logoutButton" onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
         </children>
      </HBox>
   </top>
   
   <center>
      <VBox spacing="20.0">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
         <children>
            <!-- Booking Form -->
            <VBox spacing="15.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="Book New Trek" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                  
                  <GridPane hgap="15.0" vgap="15.0">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label text="Attraction:" />
                        <ComboBox fx:id="attractionComboBox" prefWidth="200.0" promptText="Select attraction" GridPane.columnIndex="1" />
                        
                        <Label text="Date:" GridPane.rowIndex="1" />
                        <DatePicker fx:id="datePicker" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        
                        <Label text="Difficulty:" GridPane.columnIndex="2" />
                        <ComboBox fx:id="difficultyComboBox" prefWidth="150.0" promptText="Select difficulty" GridPane.columnIndex="3" />
                        
                        <Label text="Price:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                        <Label fx:id="priceLabel" style="-fx-font-weight: bold; -fx-text-fill: #2e7d32;" text="$0.00" GridPane.columnIndex="3" GridPane.rowIndex="1" />
                     </children>
                  </GridPane>
                  
                  <HBox alignment="CENTER" spacing="10.0">
                     <children>
                        <Button fx:id="bookButton" onAction="#handleBooking" prefWidth="120.0" style="-fx-background-color: #4caf50; -fx-text-fill: white;" text="Book Now" />
                        <Button fx:id="updateButton" onAction="#handleUpdateBooking" prefWidth="120.0" style="-fx-background-color: #ff9800; -fx-text-fill: white;" text="Update" />
                        <Button fx:id="deleteButton" onAction="#handleDeleteBooking" prefWidth="120.0" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Delete" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            
            <!-- Bookings Table -->
            <VBox spacing="10.0" style="-fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <Label text="My Bookings" style="-fx-font-size: 18; -fx-font-weight: bold;" />
                  
                  <TableView fx:id="bookingsTable" prefHeight="300.0">
                     <columns>
                        <TableColumn fx:id="bookingIdColumn" prefWidth="100.0" text="Booking ID" />
                        <TableColumn fx:id="attractionColumn" prefWidth="200.0" text="Attraction" />
                        <TableColumn fx:id="dateColumn" prefWidth="120.0" text="Date" />
                        <TableColumn fx:id="difficultyColumn" prefWidth="100.0" text="Difficulty" />
                        <TableColumn fx:id="priceColumn" prefWidth="100.0" text="Price" />
                        <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                     </columns>
                  </TableView>
               </children>
            </VBox>
         </children>
      </VBox>
   </center>
</BorderPane>
